@using HackathonReembolso.Mvc.Models
@using HackathonReembolso.Framework.Mvc.Components
@using System.Web.Optimization

@{
    ViewBag.Title = "Cadastro de Gerências";
    ViewBag.ShowHeaderButtons = true;
    Layout = "~/Views/Shared/_LayoutCoreContainer.cshtml";
}

<!-- BreadCrumbs -->
@section breadcrumb
{
    @{
        var data = new List<BreadCrumbModel>
        {
            new BreadCrumbModel
            {
                Class = new BreadCrumbClass {ClassName = "fa fa-home"},
                Link = new BreadCrumbLink { Href = Url.Action("Index", "Home", null), Text = "Home"}
            },

            new BreadCrumbModel
            {
                Link = new BreadCrumbLink {Href = "#", Text = "Cadastros"}
            },

            new BreadCrumbModel
            {
                Class = new BreadCrumbClass {ClassName = "active"},
                Link = new BreadCrumbLink {Href = "/Cadastros/Gerencia", Text = "Gerências"}
            }
        };
        Html.RenderPartial("_BreadCrumb", data);
    }
}

<!-- BreadCrumbs -->
<!-- Body -->
<div class="row" id="tableBody">
    <div class="col-xs-12 col-md-12">
        @{ Html.RenderPartial("_Index", null); }
    </div>
</div>
<!-- /Body -->

<!-- DIV - Modal Confirmação -->
@Html.ShowConfirmDialog("divDelete" + "", "Excluir Gerência", "")

<!-- Create -->
@Html.ShowModalCreate("divCreate", "Adicionar Gerência", @Html.Partial("_Create", null).ToHtmlString())

<!-- Edit -->
@Html.ShowModalEdit("divEdit", "Editar Gerência", @Html.Partial("_Edit", null).ToHtmlString())

<!-- Details -->
@Html.ShowModalView("divDetails", "Detalhes da Gerência", @Html.Partial("_Edit", null).ToHtmlString())

@section scripts {
    <script src="~/Content/knockout/3.2.0/knockout.js"></script>
    <script src="~/Content/jquery/jquery.validate.min.js"></script>
    <script src="~/Content/validation/additional-methods.min.js"></script>
    <script src="~/Content/site/gsnet-htmltable.js"></script>
    <script src="~/Content/template/1.4.1/assets/js/bootbox/bootbox.js"></script>
    <script src="~/Content/jquery/jquery.mask.min.js"></script>
    @Scripts.Render("~/bundles/js/gerencia")
}