<form id="frmEdit" name="frmEdit" class="form-horizontal" role="form" method="POST">
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Matrícula</label>
        <div class="col-sm-10">
            <input id="matricula" name="matricula" type="text" class="form-control" style="margin-top: 5px;" data-bind="value: matricula" maxlength="20" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">CPF</label>
        <div class="col-sm-10">
            <input id="cpf" name="cpf" type="text" class="form-control" style="margin-top: 5px;" data-bind="value: cpf" maxlength="11" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Nome</label>
        <div class="col-sm-10">
            <input id="nome" name="nome" type="text" class="form-control" style="margin-top: 5px;" data-bind="value: nome" maxlength="100" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Telefone</label>
        <div class="col-sm-10">
            <input id="telefone" name="telefone" type="text" class="form-control" style="margin-top: 5px;" data-bind="value: telefone" maxlength="20" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">C.Custo</label>
        <div class="col-sm-10">
            <select id="centroCusto" name="centroCusto" class="form-control" data-bind="options: centroCustoList, optionsValue: 'centroCustoId', optionsText: 'nome', value: id, optionsCaption: 'Selecione...'"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Gerência</label>
        <div class="col-sm-10">
            <select id="gerencia" name="gerencia" class="form-control" data-bind="options: gerenciaList, optionsValue: 'gerenciaId', optionsText: 'nome', value: id, optionsCaption: 'Selecione...'"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Cargo</label>
        <div class="col-sm-10">
            <select id="cargo" name="cargo" class="form-control" data-bind="options: cargoList, optionsValue: 'id', optionsText: 'descricao', value: cargoId, optionsCaption: 'Selecione...'"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Banco</label>
        <div class="col-sm-10">
            <select id="banco" name="banco" class="form-control" data-bind="options: bancoList, optionsValue: 'bancoId', optionsText: 'nome', value: id, optionsCaption: 'Selecione...'"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Agência</label>
        <div class="col-sm-10">
            <input id="agencia" name="agencia" type="text" class="form-control" style="margin-top: 5px;" data-bind="value: agencia" maxlength="20" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Conta Corrente</label>
        <div class="col-sm-10">
            <input id="contaCorrente" name="contaCorrente" type="text" class="form-control" style="margin-top: 5px;" data-bind="value: contaCorrente" maxlength="20" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Perfil</label>
        <div class="col-sm-10">
            <select id="perfil" name="perfil" class="form-control" data-bind="options: perfilList, optionsValue: 'perfilId', optionsText: 'nome', value: id, optionsCaption: 'Selecione...'"></select>
        </div>
    </div>    
</form>
