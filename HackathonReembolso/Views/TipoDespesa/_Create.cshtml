<form id="frmCreate" name="frmCreate" class="form-horizontal" role="form" method="POST">
    <div class="form-group">
        <label class="col-sm-2 control-label no-padding-right">Nome</label>
        <div class="col-sm-10">
            <input id="nome" name="nome" type="text" class="form-control" style="margin-top: 5px;" data-bind="value: nome" maxlength="50" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-3 col-xs-offset-3 col-lg-3 col-xs-3">
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" class="colored-success" checked="checked">
                        <span class="text">Comprovante</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-xs-3">
            <div class="checkbox">
                <label>
                    <input type="checkbox" class="colored-success" checked="checked">
                    <span class="text">Trajeto</span>
                </label>
            </div>
        </div>

        <div class="col-lg-3 col-xs-3">
            <div class="checkbox">
                <label>
                    <input type="checkbox" class="colored-success" checked="checked">
                    <span class="text">Autorização</span>
                </label>
            </div>
        </div>
    </div>
</form>
